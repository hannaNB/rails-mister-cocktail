<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="cocktail-form">
        <h1>New Review</h1>
        <div class="mt-3">
            <%= simple_form_for([@cocktail, @review]) do |form| %>
                <% if @review.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

                    <ul>
                    <% @review.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
                <% end %>

                <div class="form-group">
                <p><strong><%= form.label :content %></strong><br>
                <%= form.text_area :content, size: "50" %></p>
                </div>

                <div class="form-group">
                  <%= form.label :stars %>
                  <%= form.number_field :stars %>
                </div>

                <div>
                <%= form.submit 'Create', :class => 'btn btn-warning' %>
                <%= link_to 'Cancel', cocktails_path, class: 'btn btn-danger ml-2' %>
                </div>
            <% end %>
            <br>
        </div>
      </div>
    </div>
  </div>
</div>